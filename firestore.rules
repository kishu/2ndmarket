rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    match /deletedGoods/{deletedGoods} {
      allow read: if false;
      allow create: if request.auth.uid != null;
    }
    match /favoriteGoods/{favoriteGoods} {
      allow read: if true;
      allow create: if request.auth.uid != null;
      allow delete: if request.auth.uid == request.resource.data.userId;
    }
    match /fcmTokens/{fcmToken} {
      allow read, write: if request.auth.uid != null;
    }
    match /goods/{goods} {
      allow read: if true;
      allow create: if request.auth.uid != null;
      allow delete: if request.auth.uid == request.resource.data.userId;
    }
    match /goodsComments/{goodsComment} {
      allow read: if true;
      allow create: if request.auth.uid != null;
      allow delete: if request.auth.uid == request.resource.data.userId;
    }
    match /groups/{group} {
      allow read: if true;
      allow write: if false;
    }
    match /messages/{message} {
      allow read, write: if request.auth.uid != null;
    }
    match /profiles/{profile} {
      allow read, created: if request.auth.uid != null;
    }
  }
}
