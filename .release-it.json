{
  "hooks": {
    "after:init": ["ng lint"],
    "after:git:push": ["ng build --configuration=dev", "firebase deploy --only hosting --project=dev"]
  },
  "git": {
    "commitMessage": "chore: release dev ${version}",
    "tag": false
  },
  "npm": {
    "publish": false,
    "skipChecks": true
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "package.json",
      "out": "package.json"
    }
  }
}
