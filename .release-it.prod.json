{
  "hooks": {
    "after:init": ["ng lint"],
    "after:git:push": ["ng build --prod", "firebase deploy --only hosting --project=prod"]
  },
  "git": {
    "commitMessage": "chore: release prod ${version}",
    "tagName": "v${version}"
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@csmith/release-it-calver-plugin": {
      "format": "YYYY.0M.MICRO"
    }
  }
}
