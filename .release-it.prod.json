{
  "hooks": {
    "after:init": ["ng lint"],
    "after:git:push": ["ng build --prod", "firebase deploy --only hosting --project=prod"]
  },
  "git": {
    "commitMessage": "chore: release prod ${version}",
    "tagName": "v${version}"
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "package.json",
      "out": "composer.json"
    }
  }
}
